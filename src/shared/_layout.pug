html(prefix="og: http://ogp.me/ns#")

  head
    include ./_analytics

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    meta(name="description", content=data.meta.desc)
    meta(property="og:title" content=data.meta.og.title)
    meta(property="og:type" content=data.meta.og.type)
    meta(property="og:url" content=data.meta.og.url)
    meta(property="og:image" content=data.meta.og.url + "${require('" + data.meta.og.image + "')}")
    meta(property="og:site_name"  content=data.meta.og.site_name)
    meta(property="og:description" content=data.meta.og.desc)
    meta(property="fb:app_id" content=data.meta.og.fb.app_id)
    meta(property="article:author" content=data.meta.og.fb.page_url)
    meta(name="twitter:card" content=data.meta.og.twitter.card)
    meta(name="twitter:site" content=data.meta.og.twitter.site)
    meta(name="twitter:title" content=data.meta.og.title)
    meta(name="twitter:url" content=data.meta.og.url)
    meta(name="twitter:description" content=data.meta.og.desc)
    meta(name="twitter:image" content=data.meta.og.url + "${require('" + data.meta.og.twitter.image + "')}")
    title=data.meta.title
    include ./_drift.pug

  body
    block content
